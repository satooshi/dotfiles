#!/bin/bash

alias up='cd ..'
alias upp='cd ../..'
alias uppp='cd ../../..'
alias ls='ls -GwF'
alias ll='ls -l'
alias lh='ls -lh'
alias la='ls -la'
alias lha='ls -lha'
alias t='tar zxvf'
alias t-='tar xvf -'
alias b='bzip2 -dc'
alias dh='df -h'
alias vi='vim'
alias v='vim'
alias sr='screen -d -R'
alias grep='grep --exclude=*.svn*,*.git* --color=auto'
alias greprn='grep -rn --exclude=*.svn*,*.git*'
alias bye='sudo shutdown -h now'
alias diff='/usr/bin/diff -ua'
alias diff2='/usr/bin/diff -y --suppress-common-lines'

# for svn
alias st='svn st'
alias stu='svn st -u'
alias sd='svn di'
alias sdi='svn di'
alias sad='svn add'
alias sup='svn up'
alias sci='svn ci'
alias scim='svn ci -m'

# for git
alias gst='git status'
alias gci='git commit'
alias gdi='git diff'
alias gdc='git diff --cached'
alias gad='git add'

